    // Read and save an integer, double, and String to your variables.
    Console.println("Enter an integer value");
    secondInteger =  Convert.ToInt32(Console.ReadLine());

    Console.println("Enter an double value");
    secondDouble =  Convert.ToDouble(Console.ReadLine());

    Console.println("Enter a string message");
    secondString =  Console.ReadLine();
    
    // Print the sum of both integer variables on a new line.
    Console.println(i + secondInteger);

    // Print the sum of the double variables on a new line.
    double doubleSum = d + secondDouble;
    Console.println(Math.Round(doubleSum, 1));

    // Concatenate and print the String variables on a new line
    // The 's' variable above should be printed first.
    Console.println(s + secondString); //ssss + bbb = ssssbbb


