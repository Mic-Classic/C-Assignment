using System;
using System.Collections.Generic;
using System.IO;


namespace csharp_assignment
{
    class Solution
    {
        static void Main(string[] args)
        {
            int i = 4;
            double d = 4.0;
            string s = "Poly ilaro ";
            
// Declare the new integer, double and string.

            Console.WriteLine("Enter an integer");
            string iname = Console.ReadLine();
            int num1 = int.Parse(iname);
            
        
            Console.WriteLine("Enter a double");
            string dname = Console.ReadLine();
            double num2 = double.Parse(dname);
  
  
            Console.WriteLine("Just a complement for FPI; feel free to express yourself ");
            string sname = Console.ReadLine();
            
    
  // Solving Arithemetic operator
            
            
            int sum = i + num1;
            Console.WriteLine("The integer Sum is = "+ sum);

            
            double sum2 = d + num2;
            Console.WriteLine("The decimal Sum is = " + sum2);
            
            
            
    // Print the Final Complement
            Console.WriteLine("Yes " + s + "would be glad to receive these accolades: " + sname);
            Console.ReadLine();
            
        }
    }
}
